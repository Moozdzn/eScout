
<div class="container" style="margin: 20px 20px 20px 20px">
  <div class="row">
    <div class="col">
      <form id="evtForm"> 
        <div class='form-row'>
          <div class='form-group col-md-6'>
            <label>Organizer name</label><input class="form-control" type="text" id="Oname" name="Oname">
          </div>
          <div class='form-group col-md-6'>
            <label>Event Name</label> <input class="form-control" type="text" id="Ename" name="Ename">
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Address (Type it on the map)</label><input type='text' class="form-control" id="Eloc" name="Eloc"></textarea>
          </div>
          <div class="form-group col-md-4">
            <label>Date</label><input class="form-control" type="date" id="Edate" name="Edate">
          </div>
          <div class="form-group col-md-2">
            <label>StartTime</label><input class="form-control" type="time" id="Estart" name="Estart">
          </div> 
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label>Description </label> <input class="form-control" type="text" id="Edesc" name="Edesc">
          </div>
          <div class="form-group col-md-6">
            <label>Ticket Price </label><input class="form-control" type="number" id="Eprice" name="Eprice">
          </div>
        </div>
        
        <button type="button" class="btn btn-primary" id="createEvt">Submit</button>
      </form>
      <a href="events"><button type="button" class="btn btn-secondary" id="createEvt">Cancel</button></a>
    </div>
    <div class="col">
			<div id='mapid' style='width: 400px; height: 550px; '></div>
		</div>
  </div>
</div>
