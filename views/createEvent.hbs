<div class="container" style="margin-top: 20px;margin-bottom 20px;">
  <div class="row">
    <div class="col">
      <form id="evtForm" class="was-validated"autocomplete="off">
        <div class='form-group'>
          <label>Event Name</label> <input class="form-control" type="text" id="Ename" name="Ename"
            class="form-control is-invalid" required>
             <div class="invalid-feedback">
            Please choose an event name.
          </div>
        </div>
      <div class="form-group">
        <label>Address</label><input type='text' class="form-control" id="Eloc"
          name="Eloc" onkeydown="return false;"
                style="caret-color: transparent !important;background-color:lightgrey" required>
         <div class="invalid-feedback">
            Please choose an address by searching it on the map
          </div>
      </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Date</label><input class="form-control" type="date" id="Edate" name="Edate" required>
         <div class="invalid-feedback">
            Please choose a date.
          </div>
      </div>
      <div class="form-group col-md-6">
        <label>StartTime</label><input class="form-control" type="time" id="Estart" name="Estart" required>
         <div class="invalid-feedback">
            Please choose a start time.
          </div>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-6">
        <label>Description </label> <input class="form-control" type="text" id="Edesc" name="Edesc" required>
        <div class="invalid-feedback">
            Please choose an event description.
          </div>
      </div>
      <div class="form-group col-md-6">
        <label>Ticket Price </label><input class="form-control" type="number" id="Eprice" name="Eprice" required>
        <div class="invalid-feedback">
            Please choose a ticket price.
          </div>
      </div>
    </div>
    <div class="form-row">
      <div class='form-group col-md-6'>
        <label>Game</label><select class="custom-select" name="Game" id="Egame">
          <option value="PUBG" selected>PUBG</option>
          <option value="CSGO">CS:GO</option>
          <option value="LOL">League of Legends</option>
        </select>
      </div>

    </div>

    <button type="submit" class="btn btn-primary" >Submit</button> 
    

    </form>
    <a href="events"><button type="button" class="btn btn-secondary">Cancel</button></a>

  </div>
  <div class="col">
    <div id='mapid' style='width: 576px; height: 550px; '></div>
    <button type="button" class="btn btn-success btn-block" id="btnHeatmap" onclick="toggle()">Toggle Heatmap:
      ON</button>
  </div>
</div>
</div>
