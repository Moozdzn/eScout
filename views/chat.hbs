<link rel='stylesheet' href='/stylesheets/chat.css' />
<div class="container py-5 px-4">

  <div class="row rounded-lg overflow-hidden shadow" style="margin-bottom: 26px">
    <!-- Users box-->
    <div class="col-5 px-0">
      <div class="bg-white">

        <div class="bg-gray px-4 py-2 bg-light">
          <p class="h5 mb-0 py-1">Recent</p>
        </div>

        <div class="messages-box">
          <div class="list-group rounded-0" id="messageContacts">

          </div>
        </div>
      </div>
      <div id="bottom-bar">
			<button id="newContact" onclick="newContact()"><i class="fa fa-user-plus fa-fw" aria-hidden="true"></i> <span>New Chat</span></button>
		</div>
    </div>
    
    <!-- Chat Box-->
    <div class="col-7 px-0">
      <div class="px-4 py-5 chat-box bg-white" id="messages">

      </div>

      <!-- Typing area -->
      <form class="bg-light">
        <div class="input-group">
          <input id="Message" type="text" placeholder="Type a message" aria-describedby="sendMessage"
            class="form-control rounded-0 border-0 py-4 bg-light">
          <div class="input-group-append">
            <button id="sendMessage" type="submit" class="btn btn-link"> <i class="fa fa-paper-plane"></i></button>
          </div>
        </div>
      </form>

    </div>
  </div>
</div>
<script src="javascripts/chat.js"></script>
<script src="javascripts/utils.js"></script>